{
  "name": "jupyter-simple-extension",
  "version": "0.1.0",
  "description": "A simple JupyterLab extension",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "https://github.com/yourgithub/jupyter-simple-extension",
  "bugs": {
    "url": "https://github.com/yourgithub/jupyter-simple-extension/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Your Name",
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,js,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourgithub/jupyter-simple-extension.git"
  },
  "scripts": {
    "build": "jlpm build:lib && jlpm build:labextension:dev",
    "build:prod": "jlpm clean && jlpm build:lib && jlpm build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc",
    "clean": "jlpm clean:lib",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "clean:all": "jlpm clean:lib && jlpm clean:labextension",
    "clean:labextension": "rimraf jupyter-simple-extension/labextension",
    "install:extension": "jlpm build",
    "watch": "run-p watch:src watch:labextension",
    "watch:src": "tsc -w",
    "watch:labextension": "jupyter labextension watch ."
  },
  "dependencies": {
    "@jupyterlab/application": "^4.4.0",
    "@jupyterlab/launcher": "^4.4.0",
    "@jupyterlab/ui-components": "^4.4.0",
    "dompurify": "^3.2.5",
    "marked": "^15.0.8"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^4.4.0",
    "@jupyterlab/cells": "^4.4.0",
    "@jupyterlab/notebook": "^4.4.0",
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.14.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "jupyterlab": {
    "extension": true,
    "outputDir": "jupyter-simple-extension/labextension"
  }
}
